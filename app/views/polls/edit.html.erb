
<% if @poll %>
  <div class="alert alert-success" style="margin:0 20px 0 20px !important">
    <h3>Awesome! You're almost done.</h3>
    <h4>Here you can add new questions to your feedback request. Or, if you like, you can <%= link_to 'delete this poll', "delete/#{@poll.edit_url}", :method => :delete, :class =>"btn btn-mini btn-danger" %></h4>
  </div>
  <div class="content" style="margin:20px 20px 0 20px !important">
    <h4><%= @poll.description %></h4>
    <br><br>
    <% @poll.questions.each do |question| %>
      <h4><%= question.body %>&nbsp
      <%= link_to 'delete', question_path(:id => question.id, :edit_url => @poll.edit_url), :method => 'delete', :class =>"btn btn-mini btn-right btn-danger" %>
    <h4><br>
    <% end %>
    <br>
    <%= link_to 'Add a new question', new_question_path({:poll_id => @poll.id, :edit_url => @poll.edit_url}), :class =>"btn btn-warning" %>
    <%= link_to 'Complete! Take me to the form!', "http://www.writemeabout.me/"+@poll.easy_url, :class =>"btn btn-success" %>
    <br><br>
    <h4>Keep this link safe - that's where you can edit this poll: <a href="http://www.writemeabout.me/<%= @poll.edit_url %> ">www.writemeabout.me/<%= @poll.edit_url %></a></h4><br>
    <h4>Give your friends this link to give you honest anonymous feedback: <a href="http://www.writemeabout.me/<%= @poll.easy_url %> ">www.writemeabout.me/<%= @poll.easy_url %></a></h4>
  </div>
<%else%>
  <div class="alert alert-error" style="margin:0 20px 0 20px !important">
    <h3>Oops! Your feedback form must have expired.</h3>
  </div>
<%end%>